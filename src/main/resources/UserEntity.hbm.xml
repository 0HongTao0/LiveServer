<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hongtao.live.dao.entity.UserEntity" table="user" schema="Live">
        <id name="id" column="id"/>
        <property name="userId" column="userId"/>
        <property name="password" column="password"/>
        <property name="nick" column="nick"/>
        <property name="birthday" column="birthday"/>
        <property name="introduction" column="introduction"/>
        <property name="job" column="job"/>
        <property name="address" column="address"/>
        <property name="liveIntroduction" column="liveIntroduction"/>
        <property name="avatar" column="avatar"/>
        <property name="gender" column="gender"/>
        <property name="money" column="money"/>
    </class>
</hibernate-mapping>